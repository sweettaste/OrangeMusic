.top{
  width: 100%;
  height: 100%;
}
.title{
  width: 100%;
  height: 90rpx;
  line-height: 90rpx;
  font-weight: 500;
  font-size: 38rpx;
  color: #000;
}
.title image{
  width: 26rpx;
  height: 26rpx;
  vertical-align: middle;
  position: relative;
  bottom: 3rpx;
  left: 10rpx;
}

.item{
  width: 100%;
  height: 270rpx;
  display: flex;
  position: relative;
}
.item-img{
  width: 33%;
  margin-right: 20rpx;
  overflow: hidden;
  border-radius: 4px;
}
.item-img image{
  width: 100%;
  height: 100%;
}
.item-tracks{
  width: 60%;
  color: gray;
}
.items-info{
  padding: 18rpx 0px;
  text-overflow: ellipsis;
  overflow: hidden;
  white-space: nowrap;
  line-clamp: 1;
}
.desc{
  position: absolute;
  bottom: 40rpx;
  left: 20rpx;
  color: #fff;
  font-size: 25rpx;
}
.recommendList{
  
}
.recommendList-item{
  width: 90%;
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
}
.remm-img{
  flex: 1;
  width: 30.3%;
  height: 250rpx;
  min-width: 30.3%;
  max-width: 30.3%;
}
.remm-img image{
  width: 100%;
  height: 250rpx;
}