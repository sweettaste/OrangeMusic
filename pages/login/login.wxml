<view class="loginPage">
<view class="view-image">
  <image src="../../assets/icons/login.png" mode="widthFix"> </image>
</view>
<form bindsubmit="getTel">
  <view class="input">
  <input  name="tel" placeholder="请输入手机号码" />
  </view>
  <view class="input">
  <input  name="pwd" placeholder="密码" type="password" />
  </view>
  <view class="get">
   <button form-type="submit" plain style="border:none">登录</button>
  </view>
</form>
<view class="other">
  <view>
    <button class="button" bind:tap="register" data-id="1">注册</button>
  </view>

</view>
</view>

