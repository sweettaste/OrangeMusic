/* pages/songlist/songlist.wxss */
@import "../../template/pageplay/pageplay.wxss";
.play-bg{
  background-repeat: no-repeat;
  background-size: cover;
  background-position: top left;
  filter: blur(20px);
  transform: scale(1.5);
}
.play-bg, .play-bg::after{
 position: absolute;
 left: 0;
 top: 0;
 right: 0;
 bottom: 0;
 width: 100%;
 height: 420rpx; 
}
.play-bg::after{
  background-color: rgba(0, 0, 0, 0.3)
}
.main{
  height: 100%;
  overflow-x: hidden;
  overflow-y: auto;
  position: absolute;
  z-index: 2;
  width: 100%;
}
.songs-title{
  width: 100%;
  display: flex;
  padding-top: 60rpx;
}
.pic-image{
  margin-left: 30rpx;
}
.pic-image image{
  width: 270rpx;
  height: 270rpx;
  border-radius: 12rpx;
}
.content-title{
  margin-left: 50rpx;
  color: #fff;

}
.title{
  font-size: 40rpx;
  font-weight: 400;
  letter-spacing: 4rpx;

}
.info{
 display: flex;
 width: 100%;
 justify-content: flex-start;
 padding: 12rpx 0;
}
.info-pic image{
  width: 72rpx;
  height: 72rpx;
  border-radius: 50%;
}
.info-name{
  margin-top: 10rpx;
  margin-left: 33rpx;
  font-size: 30rpx;
  opacity: 0.6;
}
.content-detail{
  font-size: 28rpx;
  opacity: 0.5;
  text-overflow: ellipsis;
  overflow: hidden;
  /* 多行文本溢出，webkit私有属性 */
  -webkit-line-clamp: 2;
  /* 多行文本溢出必须配合以下属性使用 */
  display: -webkit-box;
  -webkit-box-orient: vertical;
}
