.music-name{
  font-size: 35rpx;
  width: 100%;
  height: 55rpx;
  overflow: hidden;
  color: #000;
}
.list-image image{
  width: 40rpx;
  height: 40rpx;
}
.music-writer{
   color: #7e7a7a;
   font-size: 27rpx;
}
.current{
  display: none;
}

