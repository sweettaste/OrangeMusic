.icon-bofang:before {
  content: "\e680";
}
.containers{
  width: 100%;
  background: #fff;
  margin-top: 50rpx;
  border-radius: 45rpx;
  padding-left: 20rpx;
  text-align: left;
  padding: 0;
  margin-right: 5rpx;

}
.container-content{
  padding:0;
  width: 100%;
  padding-left: 30rpx;
  vertical-align: middle;
  padding-top: 27rpx;
  padding-bottom: 35rpx;
  margin-bottom: 10rpx;
  border-radius: 43rpx;
  display: flex;
  z-index: 3;
}
.text{
  margin-left: 10rpx;
  margin-top: 14rpx;
}
.play-all{
  font-size: 40rpx;
  color: #000;
}
.play-number{
  font-size: 30rpx;
  color: #7e7a7a;
}
.control{
   width: 100%;
    padding-left: 20rpx;
}
.array-info{
  display: flex;
  width: 100%;
  height: 100rpx;
  padding-left: 10rpx;
  
}
.list-index{

  width: 90rpx;
  padding-top: 28rpx;
}
.index{
  color: #7e7a7a;
  font-size: 30rpx;
}
.list-info{

  width: 500rpx;
  overflow: hidden;
   text-overflow: ellipsis;
    /* 多行文本溢出，webkit私有属性 */
