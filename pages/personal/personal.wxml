<view>
  <form bindsubmit="getPersonalInfo">
    <view class="user-info" >
      <button  bind:tap="choosePic"  size="mini">选择头像:</button>
      <image src="{{userPic}}"></image>
    </view>
      <view class="user-info">
      <text>用户名称:</text>
        <input name="username" type="text" maxlength="20"></input>
      </view>
   <view class="user-info">
      <text space="nbsp">密       码:</text>
        <input name="pwd" type="password" ></input>
      </view>
       <view class="user-info">
      <text>确认密码:</text>
        <input type="password" name="repwd" ></input>
      </view>
       <view class="get">
          <button form-type="submit" plain style="border:none">注册</button>
       </view>
  </form>

</view>