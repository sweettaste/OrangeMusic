/* pages/mine/local/local.wxss */
.tab-control{
    margin-top: 15rpx;
    width: 100%;
}

.item-icon{

  width: 230rpx;
  height: 150rpx;
  display: flex;
  float: left;
}
.item-icon image{
  width: 70rpx;
  height: 70rpx;
  margin: 0 auto;
  margin-top: 45rpx;

}

.item-title{
  line-height: 150rpx;
  height: 153rpx;
  width: 100%;
  border-top: 1rpx solid rgba(0,0,0,.1);
}
.scroll-view{
  height: 100%
}
.like-songs{
  border-top: 4px solid #ededed;
  width: 100%;
  margin-top: 30rpx;
  padding-bottom: 40rpx;
  padding-top: 30rpx;
  border-bottom: 1px solid #ededed;
  margin-bottom: 30rpx;
}
.like-titie{
  height: 70rpx;
  width: 100%;
  margin-bottom: 15rpx;
}

.like-titie text{
  font-size: 38rpx;
  vertical-align: middle;
  padding-left: 20rpx;
  border-left: 6rpx solid #d33f33;
}
.like-titie image{
  padding-left: 10rpx;
  width: 26rpx;
  height: 26rpx;
  vertical-align: middle;
}
.my-like{

  width: 100%;
  display: flex;
}
.pic{
  margin-left: 30rpx;
  width: 220rpx;
  height: 165rpx;
  border-radius: 12rpx;
  background: #000;
  text-align: center;
  line-height: 220rpx;
}
.pic image{
  z-index: 1;
  width: 80rpx;
  height: 80rpx;

  /* border-radius: 12rpx; */
}
.like-item{
  padding-top: 40rpx;
  margin-left: 30rpx;
  width: 100%;
}
.item-name{
  font-size: 35rpx;
  color: #000;
}
.item-count{
  font-size: 30rpx;
  color: #928d8d;
}