/* pages/nearest/nearest.wxss */
@import '../../template/pageplay/pageplay.wxss';
.nearest-bg{
  width: 100%;
  height: 100vh;
  position: relative;
}

.nearest-song{
  padding: 10px 0;
  margin-left: 5rpx;
  /* margin-top: 47rpx;
  margin-bottom: 51rpx; */
  overflow: hidden;
}
scroll-view{
  height: calc(100%  - 120rpx);
}
.songs-info{
  width: 100%;
  height: 80rpx;
  display: flex;
  margin-bottom: 8rpx;
}
.songs-index{
  width: 70rpx;
  padding-top: 22rpx;
  text-align: center;
}
.songs-index  image{
   width: 40rpx;
   height: 40rpx;
}
.songs-index text{
  font-size: 26rpx;
  color: #a7a2a2;
}
.detail{
  margin-left: 20rpx;
}
.detail-name{
  height: 45rpx;
  width: 100%;
  font-size: 30rpx;
  overflow: hidden;
  /* 当文本溢出时显示... */
  text-overflow: ellipsis;
  /* 多行文本溢出，webkit私有属性 */
  -webkit-line-clamp: 1;
  line-clamp: 1;
  /* 多行文本溢出必须配合以下属性使用 */
  display: -webkit-box;
  box-orient: vertical;
  -webkit-box-orient: vertical;
}
.detail-al-name{
  height: 50rpx;
  color: #a7a2a2;
  font-size: 25rpx;
  overflow: hidden;
  width: 100%;
  text-overflow: ellipsis;
  line-clamp: 1;
  -webkit-line-clamp: 1;
  display: -webkit-box;
  box-orient: vertical;
  -webkit-box-orient: vertical;
}

