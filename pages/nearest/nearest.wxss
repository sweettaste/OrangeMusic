/* pages/nearest/nearest.wxss */
@import '../../template/pageplay/pageplay.wxss';
.nearest-bg{
  width: 100%;
  height: 100%;
  background: pink;
}
.title{
  width: 100%;
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  height: 100rpx;
  padding-top: 25rpx;
  padding-left: 40rpx;
  background: #fff;
  font-size: 48rpx;
  color: #000;
  z-index: 2;
  border-bottom: 1px solid #ededed;
}
.nearest-song{
  margin-left: 30rpx;
  background: blue;
  margin-top: 100rpx;
}
.songs-info{
  width: 100%;
  height: 80rpx;
  display: flex;
}
.songs-index{
  width: 70rpx;
  padding-top: 25rpx;
  text-align: center;
}
.songs-index  image{
   width: 40rpx;
   height: 40rpx;
}
.songs-index text{
  font-size: 25rpx;
  color: #a7a2a2;
}
.detail{
  margin-left: 20rpx;
}
.detail-name{
  height: 50rpx;
  width: 100%;
  font-size: 30rpx;
  overflow: hidden;
  /* 当文本溢出时显示... */
  text-overflow: ellipsis;
  /* 多行文本溢出，webkit私有属性 */
  -webkit-line-clamp: 1;
  line-clamp: 1;
  /* 多行文本溢出必须配合以下属性使用 */
  display: -webkit-box;
  box-orient: vertical;
  -webkit-box-orient: vertical;
}
.detail-al-name{
  height: 40rpx;
  color: #a7a2a2;
  font-size: 25rpx;
  overflow: hidden;
  width: 100%;
  text-overflow: ellipsis;
  line-clamp: 1;
  -webkit-line-clamp: 1;
  display: -webkit-box;
  box-orient: vertical;
  -webkit-box-orient: vertical;
}

